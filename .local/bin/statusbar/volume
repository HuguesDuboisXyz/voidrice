#!/bin/sh


help_notify () {
	notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.\n- Middle click to mute.
- Scroll to change."
}
# Prints the current volume or ðŸ”‡ if muted.
PROG="alsa" # alsa | pulse
case $PROG in
	alsa)
		case $BLOCK_BUTTON in
			1) setsid -f "$TERMINAL" -e alsamixer ;;
			2) amixer set 'Master' toggle ;;
			4) amixer set 'Master' 10%+ ;;
			5) amixer set 'Master' 10%- ;;
			3) help_notify ;;
			6) "$TERMINAL" -e "$EDITOR" "$0" ;;
		esac
		volstat="$(amixer get Master)"
		echo "$volstat" | grep "\[off\]" >/dev/null && printf "ðŸ”‡\\n" && exit
		vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed "s/[^0-9]*//g;1q")
		;;

	pulse)
		case $BLOCK_BUTTON in
			1) setsid -f "$TERMINAL" -e pulsemixer ;;
			2) pamixer -t ;;
			4) pamixer --allow-boost -i 1 ;;
			5) pamixer --allow-boost -d 1 ;;
			3) help_notify ;;
			6) "$TERMINAL" -e "$EDITOR" "$0" ;;
		esac
		[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit
		vol="$(pamixer --get-volume)"
		;;
esac

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol%"
